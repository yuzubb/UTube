{
  "name": "UTube",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "gunicorn --bind 0.0.0.0:$PORT app:app",
    "restartPolicy": {
      "maxRetries": 10
    }
  },
  "variables": {
    "PYTHON_VERSION": "3.10"
  }
}
